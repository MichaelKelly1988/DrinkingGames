<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drinking"
    tools:context="com.studio.mick.drinkinggame.MainActivity">


    <ImageView
        android:id="@+id/b1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Spin the Beer"
        android:background="@drawable/round1"
        android:layout_marginBottom="195dp"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:layout_toRightOf="@+id/b2"
        android:layout_toEndOf="@+id/b2"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp" />

    <ImageView
        android:id="@+id/b2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Shake a Shot"
        android:background="@drawable/round2"
        android:clickable="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@+id/b1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/b3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Kings"
        android:background="@drawable/round3"
        android:clickable="true"
        android:layout_alignTop="@+id/b1"
        android:layout_toRightOf="@+id/b1"
        android:layout_toEndOf="@+id/b1"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />
</RelativeLayout>
