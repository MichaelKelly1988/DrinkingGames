<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.studio.mick.drinkinggame.DrinkActivity">

    <!-- view for AdMob Interstitial Ad -->

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Spin the Beer"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/i_bot"
        android:layout_alignStart="@+id/i_bot"
        android:layout_marginTop="13dp" />

    <ImageView
        android:id="@+id/drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/drink" />

    <ImageView
        android:id="@+id/b_go"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:background="@drawable/beerhead1"
        android:clickable="true"
        android:text="@string/next_level" />

    <ImageView
        android:id="@+id/i_bot"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/i_bot"
        android:scaleType="centerInside"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="139dp"
        android:layout_marginBottom="103dp"
        android:layout_above="@+id/b_go"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
